@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Ha olvidado su contraseña?";
    Layout = "_AuthLayout";
}

<div class="row d-flex justify-content-center align-items-center w-100">
    <div class="col-12 col-md-6 bg-white shadow rounded p-4 mt-5">
        <a asp-page="./Login" class="mb-3 d-inline-block">  Volver</a>

        <h1 class="fw-bold h2">@ViewData["Title"]</h1>
        <h2 class="lead text-muted">Por favor, ingrese su correo electronico</h2>
        
        <form method="post" class="mt-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Input.Email" class="form-label mb-1">Correo</label>
                <input asp-for="Input.Email" placeholder="Ingrese su correo" class="form-control" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Resetear contraseña</button>
        </form>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
