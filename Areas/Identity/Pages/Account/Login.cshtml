@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar sesion";
    Layout = "_AuthLayout";
}

<div class="row shadow rounded overflow-hidden col-lg-9 col-12 mx-auto login">
    <div class="col-md-6 bg-image bg-login-page">

    </div>
    <div class="col-md-6 col-sm-12 p-5">
         <form id="account" method="post">
                <h2 class="fw-bold mb-4 text-center">Inicio de sesión</h2>
                
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="Input.Email" class="form-label mb-1"> Correo </label>
                    <input asp-for="Input.Email" placeholder="Ingrese su correo electronico" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Input.Password" class="form-label mb-1"> Contraseña </label>
                    <input asp-for="Input.Password" placeholder="Ingrese su contraseña" class="form-control" autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>

                    <p class="form-text small">
                        Olvidaste tu contraseña?
                        <a id="forgot-password" asp-page="./ForgotPassword">Resetar contraseña</a>
                    </p>
                </div>

                @* <div class="form-group mb-3">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label mb-1">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                            Recordar datos?
                        </label>
                    </div>
                </div> *@
                
                <div class="mb-3">
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">
                        Iniciar sesión
                    </button>
                </div>
                <div>
           
                    <p class="form-text small">
                        No tienes cuenta? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrate</a>
                    </p>
                    @* <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p> *@
                </div>
            </form>
    </div>
</div>

